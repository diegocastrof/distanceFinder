{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "components": ["components"],
      "context": ["context"],
      "env": ["env"],
      "models": ["models"],
      "services": ["services"],
      "utils": ["utils"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.d.tsx", "**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
